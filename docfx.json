{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/TheCabin.Core/*.csproj",
            "src/TheCabin.Infrastructure/*.csproj",
            "src/TheCabin.Console/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net9.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "docs/**.md",
          "docs/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appTitle": "The Cabin API Documentation",
      "_appName": "The Cabin",
      "_appFooter": "The Cabin - Voice-Controlled Text Adventure",
      "_enableSearch": true
    }
  }
}
