<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TheCabin.Maui"
             xmlns:converters="clr-namespace:TheCabin.Maui.Converters"
             x:Class="TheCabin.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <converters:BoolToFontAttributesConverter x:Key="BoolToFontAttributesConverter" />
            <converters:BoolToRecordingColorConverter x:Key="BoolToRecordingColorConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:TtsIconConverter x:Key="TtsIconConverter" />
            
            <!-- Achievement Converters -->
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <converters:BoolToUnlockIconConverter x:Key="BoolToUnlockIconConverter" />
            <converters:BoolToUnlockColorConverter x:Key="BoolToUnlockColorConverter" />
            <converters:FilterToColorConverter x:Key="FilterToColorConverter" />
            <converters:FilterToOpacityConverter x:Key="FilterToOpacityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
