<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TheCabin.Maui.ViewModels"
             xmlns:models="clr-namespace:TheCabin.Maui.Models"
             x:Class="TheCabin.Maui.Views.LoadGamePage"
             x:DataType="viewmodels:LoadGameViewModel"
             BackgroundColor="#1a1a1a"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto" Padding="16">
        
        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="#2d2d2d"
                Stroke="#444"
                StrokeThickness="1"
                Padding="16"
                Margin="0,0,0,16">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>
            
            <VerticalStackLayout Spacing="4">
                <Label Text="Load Game"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Label Text="Select a saved game to continue"
                       FontSize="14"
                       TextColor="#ccc"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Border>
        
        <!-- Saved Games List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="12">
                
                <!-- Games Collection -->
                <CollectionView ItemsSource="{Binding SavedGames}"
                               IsVisible="{Binding HasSavedGames}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:GameSaveInfoViewModel">
                            <Border BackgroundColor="#2d2d2d"
                                   Stroke="#444"
                                   StrokeThickness="1"
                                   Padding="16"
                                   Margin="0,0,0,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:LoadGameViewModel}}, Path=LoadGameCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Border.GestureRecognizers>
                                
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*,Auto">
                                    
                                    <!-- Icon -->
                                    <Label Grid.Row="0" Grid.Column="0" Grid.RowSpan="4"
                                           Text="{Binding Icon}"
                                           FontSize="48"
                                           VerticalOptions="Center"
                                           Margin="0,0,16,0"/>
                                    
                                    <!-- Save Name -->
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Name}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    
                                    <!-- Theme Name -->
                                    <Label Grid.Row="1" Grid.Column="1"
                                           Text="{Binding ThemeName}"
                                           FontSize="14"
                                           TextColor="#aaa"
                                           Margin="0,2,0,0"/>
                                    
                                    <!-- Location and Health -->
                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="1" 
                                                          Spacing="16"
                                                          Margin="0,8,0,0">
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="📍" FontSize="14"/>
                                            <Label Text="{Binding LocationDisplay}"
                                                   FontSize="12"
                                                   TextColor="#ccc"/>
                                        </HorizontalStackLayout>
                                        
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="❤️" FontSize="14"/>
                                            <Label Text="{Binding HealthDisplay}"
                                                   FontSize="12"
                                                   TextColor="{Binding HealthColor}"/>
                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>
                                    
                                    <!-- Date and Play Time -->
                                    <HorizontalStackLayout Grid.Row="3" Grid.Column="1"
                                                          Spacing="16"
                                                          Margin="0,4,0,0">
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="📅" FontSize="12"/>
                                            <Label Text="{Binding SavedDateDisplay}"
                                                   FontSize="11"
                                                   TextColor="#999"/>
                                        </HorizontalStackLayout>
                                        
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="🕐" FontSize="12"/>
                                            <Label Text="{Binding PlayTimeDisplay}"
                                                   FontSize="11"
                                                   TextColor="#999"/>
                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>
                                    
                                    <!-- Delete Button -->
                                    <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="4"
                                            Text="🗑️"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:LoadGameViewModel}}, Path=DeleteGameCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="Transparent"
                                            TextColor="#D0021B"
                                            FontSize="24"
                                            WidthRequest="50"
                                            HeightRequest="50"
                                            VerticalOptions="Center"/>
                                    
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
                <!-- Empty State -->
                <VerticalStackLayout Spacing="16"
                                    Padding="32"
                                    IsVisible="{Binding HasSavedGames, Converter={StaticResource InvertedBoolConverter}}"
                                    VerticalOptions="Center">
                    <Label Text="💾"
                           FontSize="64"
                           HorizontalOptions="Center"/>
                    <Label Text="No Saved Games"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Start a new adventure to create your first save!"
                           FontSize="14"
                           TextColor="#aaa"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
                
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Cancel Button -->
        <Button Grid.Row="2"
                Text="Cancel"
                Command="{Binding CancelCommand}"
                BackgroundColor="#444"
                TextColor="White"
                FontSize="16"
                Padding="16"
                Margin="0,16,0,0"
                CornerRadius="8"/>
        
    </Grid>
</ContentPage>
