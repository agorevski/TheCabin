    <Rule Id="SA1516" Action="None" />

    <!-- Suppress SA1513: Closing brace should be followed by blank line -->
    <Rule Id="SA1513" Action="None" />

    <!-- Suppress SA1503: Braces should not be omitted -->
    <Rule Id="SA1503" Action="None" />

    <!-- Suppress SA1128: Put constructor initializers on their own line -->
    <Rule Id="SA1128" Action="None" />

    <!-- Suppress SA1202: 'public' members should come before 'private' members -->
