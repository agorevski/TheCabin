    <!-- Can be fixed via IDE settings or format on save -->
    <Rule Id="SA1028" Action="None" />

    <!-- Suppress SA1009: Closing parenthesis should not be preceded by a space -->
    <Rule Id="SA1009" Action="None" />

    <!-- Suppress SA1402: File may only contain a single type -->
    <!-- Project groups related types in single files -->
    <Rule Id="SA1402" Action="None" />

    <!-- Suppress SA1214: Readonly fields should appear before non-readonly fields -->
    <Rule Id="SA1214" Action="None" />

    <!-- Suppress SA1515: Single-line comment should be preceded by blank line -->
    <Rule Id="SA1515" Action="None" />

    <!-- Suppress SA1111: Closing parenthesis should be on line of last parameter -->
    <Rule Id="SA1111" Action="None" />

    <!-- Suppress SA1203: Constant fields should appear before non-constant fields -->
    <Rule Id="SA1203" Action="None" />

    <!-- Suppress SA1002: Semicolons should be followed by space -->
    <Rule Id="SA1002" Action="None" />

    <!-- Suppress SA1512: Single-line comments should not be followed by blank line -->
    <Rule Id="SA1512" Action="None" />

    <!-- Suppress SA1500: Braces for multi-line statements should not share line -->
    <Rule Id="SA1500" Action="None" />
