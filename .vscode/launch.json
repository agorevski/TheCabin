{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Console App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/TheCabin.Console/bin/Debug/net9.0/TheCabin.Console.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/TheCabin.Console",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Run Console App (Release)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-release",
            "program": "${workspaceFolder}/src/TheCabin.Console/bin/Release/net9.0/TheCabin.Console.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/TheCabin.Console",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Debug Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "test",
                "--no-build",
                "--configuration",
                "Debug"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Attach to Process",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
